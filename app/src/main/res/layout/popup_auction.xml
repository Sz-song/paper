<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price_now_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="当前价:"/>
        <TextView
            android:id="@+id/price_now"
            android:layout_toRightOf="@+id/price_now_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price_my"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="italic|bold"
            android:background="@drawable/stroke_1_black"/>
        <TextView
            android:id="@+id/reduce"
            android:background="@drawable/stroke_1_black"
            android:layout_toLeftOf="@id/price_my"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="－"/>
        <TextView
            android:id="@+id/add"
            android:background="@drawable/stroke_1_black"
            android:layout_toRightOf="@id/price_my"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="＋"/>
    </RelativeLayout>
    <Button
        android:id="@+id/check_add"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="确认出价"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:background="@color/gold"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>